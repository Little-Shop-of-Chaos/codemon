{
	"name": "codemon",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"keywords": [],
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"server": "nodemon --watch './' --ext ts,js --exec 'tsx' server.js",
		"macStart": "nodemon --watch './' --ext ts --exec 'node --loader ts-node/esm' server.js",
		"devStart": "nodemon server.cjs",
		"dev:full": "concurrently \"npm run server\" \"npm run dev\""
	},
	"devDependencies": {
		"@types/express": "^5.0.3",
		"concurrently": "^9.2.0",
		"dotenv": "^17.2.1",
		"nodemon": "^3.1.10",
		"tsx": "^4.20.3",
		"typescript": "~5.8.3",
		"undici-types": "^7.12.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@types/node": "^24.1.0",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"mongoose": "^8.16.5",
		"phaser": "^3.90.0",
		"ts-node": "^10.9.2"
	}
}
